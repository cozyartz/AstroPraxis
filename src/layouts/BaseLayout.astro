---
const { title = "AstroPraxis", description, ogImage, keywords, type, author, publishedTime, modifiedTime } = Astro.props;
import SeoMeta from "../components/SeoMeta.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ChatBot from "../components/ChatBot.tsx";
---

<html lang="en" class="scroll-smooth">
  <head>
    <SeoMeta title={title} description={description} ogImage={ogImage} keywords={keywords} type={type} author={author} publishedTime={publishedTime} modifiedTime={modifiedTime} />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="icon" href="/favicon.png" type="image/png" />
  </head>

  <body class="bg-white text-neutral-800 font-body leading-relaxed antialiased">
    <Header />
    <main id="main-content" class="min-h-screen animate-fade-in">
      <slot />
    </main>
    <Footer />
    <ChatBot client:load />
  </body>
</html>
