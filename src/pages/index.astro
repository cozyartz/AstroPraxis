---
import BaseLayout from '../layouts/BaseLayout.astro';

const highlights = [
  {
    icon: "fa-gears",
    label: "Systems Strategy",
    desc: "From decision frameworks to scalable automation, we help teams move with clarity."
  },
  {
    icon: "fa-scale-balanced",
    label: "Equity Consulting",
    desc: "Anti-performative equity work that integrates into how you actually operate."
  },
  {
    icon: "fa-drone",
    label: "Aerial Intelligence",
    desc: "Certified drone ops for mapping, environmental sensing, and spatial storytelling."
  },
  {
    icon: "fa-chalkboard-user",
    label: "Instructional Design",
    desc: "Inclusive learning systems, adult education strategy, and digital curriculum builds."
  },
  {
    icon: "fa-photo-film",
    label: "Media & Narrative",
    desc: "We help orgs shift power through visual storytelling and mission-aligned design."
  },
  {
    icon: "fa-wheelchair",
    label: "ADA & Disability Advocacy",
    desc: "Accessible systems, audits, policy advising, and lived-experience-informed implementation."
  }
];
---

<BaseLayout 
  title="AstroPraxis Consulting - Transforming Systems, Building Possibilities"
  description="Women-owned, queer-led consultancy specializing in equity-centered systems transformation, ADA compliance, and inclusive design. Based in Battle Creek, Michigan."
  keywords="equity consulting, systems strategy, ADA compliance, instructional design, Battle Creek Michigan consultancy, inclusive design, disability advocacy, aerial intelligence, drone services, transformative consulting, women-owned business, queer-led consulting"
>
  <!-- HERO SECTION -->
  <section
    class="relative min-h-screen flex items-center justify-center px-6 text-center overflow-hidden"
    role="region"
    aria-labelledby="hero-heading"
  >
    <!-- Animated Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-indigo-950 via-purple-900 via-slate-900 to-black animate-gradient"></div>
    
    <!-- Floating Particles -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-indigo-400 rounded-full animate-float"></div>
      <div class="absolute top-1/3 right-1/3 w-1 h-1 bg-purple-400 rounded-full animate-float stagger-2"></div>
      <div class="absolute bottom-1/4 left-1/3 w-3 h-3 bg-cyan-400 rounded-full animate-float stagger-4"></div>
      <div class="absolute top-2/3 right-1/4 w-1.5 h-1.5 bg-emerald-400 rounded-full animate-float stagger-6"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-5xl mx-auto animate-fade-in-up">
      <div class="mb-6">
        <h1 id="hero-heading" class="text-6xl md:text-7xl lg:text-8xl font-black leading-none tracking-tighter mb-6 bg-gradient-to-r from-white via-indigo-200 to-purple-200 bg-clip-text text-transparent animate-slide-in-left">
          Strategy for Systems That Actually Work
        </h1>
      </div>
      
      <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed animate-fade-in-up stagger-2">
        We are a collective of women-owned, queer-led consultants, designers, technologists, and facilitators.
        <span class="block mt-2 text-indigo-300 font-medium">We help people transform the structures they are in and build the ones they need.</span>
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-up stagger-3">
        <a
          href="/services"
          class="group relative inline-flex items-center gap-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-8 py-4 rounded-xl text-lg font-bold hover:from-indigo-500 hover:to-purple-500 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-indigo-500/25 glow-border"
        >
          <i class="fa-solid fa-rocket text-lg group-hover:animate-pulse" aria-hidden="true"></i>
          Explore Our Services
          <i class="fa-solid fa-arrow-right text-sm group-hover:translate-x-1 transition-transform" aria-hidden="true"></i>
        </a>
        
        <a
          href="#what-we-offer"
          class="inline-flex items-center gap-2 glass text-white px-6 py-3 rounded-xl text-base font-semibold hover:bg-white/10 transition-all duration-300"
        >
          <i class="fa-solid fa-chevron-down animate-float" aria-hidden="true"></i>
          Learn More
        </a>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-float">
      <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center">
        <div class="w-1 h-3 bg-white/50 rounded-full mt-2 animate-pulse"></div>
      </div>
    </div>
  </section>

  <!-- WHAT WE OFFER -->
  <section
    id="what-we-offer"
    class="relative py-24 px-6 bg-gradient-to-b from-black via-slate-950 to-black text-white"
    role="region"
    aria-labelledby="offer-heading"
  >
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto">
      <div class="text-center mb-20 animate-fade-in-up">
        <h2 id="offer-heading" class="text-5xl md:text-6xl font-black mb-6 bg-gradient-to-r from-white via-indigo-200 to-purple-200 bg-clip-text text-transparent">
          What We Offer
        </h2>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          Comprehensive solutions designed to transform your systems and amplify your impact
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
        {highlights.map((h, index) => (
          <article
            class={`group relative glass-dark rounded-2xl p-8 card-3d glow-border transition-all duration-500 animate-fade-in-up stagger-${index + 1}`}
            aria-label={h.label}
          >
            <!-- Icon Container -->
            <div class="relative mb-6">
              <div class="w-16 h-16 bg-gradient-to-br from-indigo-500/20 to-purple-500/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <i class={`fa-solid ${h.icon} text-2xl text-indigo-400 group-hover:text-indigo-300 transition-colors`} aria-hidden="true"></i>
              </div>
              <!-- Animated Background Glow -->
              <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/10 to-purple-500/10 rounded-2xl blur-xl group-hover:blur-2xl opacity-0 group-hover:opacity-100 transition-all duration-500"></div>
            </div>

            <!-- Content -->
            <div class="space-y-4">
              <h3 class="text-xl font-bold text-white group-hover:text-indigo-200 transition-colors duration-300">
                {h.label}
              </h3>
              <p class="text-gray-300 leading-relaxed group-hover:text-gray-200 transition-colors duration-300">
                {h.desc}
              </p>
            </div>

            <!-- Hover Indicator -->
            <div class="absolute bottom-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <i class="fa-solid fa-arrow-right text-indigo-400 text-sm transform group-hover:translate-x-1 transition-transform"></i>
            </div>

            <!-- Card Border Glow -->
            <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-indigo-500/0 via-purple-500/0 to-cyan-500/0 group-hover:from-indigo-500/20 group-hover:via-purple-500/20 group-hover:to-cyan-500/20 transition-all duration-500 -z-10 blur-xl"></div>
          </article>
        ))}
      </div>

      <!-- Bottom CTA -->
      <div class="text-center mt-20 animate-fade-in-up stagger-6">
        <a
          href="/services"
          class="inline-flex items-center gap-3 text-indigo-400 hover:text-indigo-300 font-semibold text-lg group transition-colors duration-300"
        >
          <span>Explore All Services</span>
          <i class="fa-solid fa-arrow-right group-hover:translate-x-2 transition-transform duration-300"></i>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA SECTION -->
  <section class="relative py-32 px-6 overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-indigo-900 via-purple-800 to-slate-900 animate-gradient"></div>
    
    <!-- Glass Overlay -->
    <div class="absolute inset-0 glass-dark"></div>
    
    <!-- Floating Elements -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-1/4 left-1/6 w-4 h-4 bg-indigo-400 rounded-full animate-float"></div>
      <div class="absolute bottom-1/3 right-1/5 w-2 h-2 bg-purple-400 rounded-full animate-float stagger-3"></div>
      <div class="absolute top-1/2 right-1/3 w-3 h-3 bg-cyan-400 rounded-full animate-float stagger-5"></div>
    </div>

    <div class="relative z-10 max-w-4xl mx-auto text-center text-white">
      <div class="animate-fade-in-up">
        <h2 class="text-5xl md:text-6xl font-black mb-8 bg-gradient-to-r from-white via-indigo-200 to-purple-200 bg-clip-text text-transparent">
          Let's Build Something Better
        </h2>
        
        <p class="text-xl md:text-2xl text-gray-300 mb-4 leading-relaxed max-w-3xl mx-auto">
          Reach out to explore a collaboration, or tell us what is not working yet.
        </p>
        
        <p class="text-lg text-indigo-300 font-medium mb-12">
          We will meet you with care and possibility.
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-fade-in-up stagger-2">
        <a
          href="https://queerlyqualified.formaloo.me/ejys27"
          target="_blank"
          rel="noopener noreferrer"
          class="group relative overflow-hidden bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-10 py-5 rounded-2xl text-xl font-bold hover:from-indigo-500 hover:to-purple-500 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-indigo-500/25 animate-pulse-glow"
        >
          <div class="relative z-10 flex items-center gap-3">
            <i class="fa-solid fa-message text-lg group-hover:animate-pulse" aria-hidden="true"></i>
            Start the Conversation
            <i class="fa-solid fa-arrow-right text-sm group-hover:translate-x-1 transition-transform" aria-hidden="true"></i>
          </div>
          
          <!-- Button Glow Effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-indigo-400/20 to-purple-400/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </a>

        <div class="flex items-center gap-4 text-gray-400">
          <div class="w-px h-8 bg-gray-600"></div>
          <span class="text-sm">or</span>
          <div class="w-px h-8 bg-gray-600"></div>
        </div>

        <a
          href="/services"
          class="group inline-flex items-center gap-3 glass text-white px-8 py-4 rounded-2xl text-lg font-semibold hover:bg-white/10 transition-all duration-300 hover:shadow-lg"
        >
          <i class="fa-solid fa-eye group-hover:scale-110 transition-transform" aria-hidden="true"></i>
          View Our Services
        </a>
      </div>

      <!-- Trust Indicators -->
      <div class="mt-16 pt-12 border-t border-white/10 animate-fade-in-up stagger-4">
        <p class="text-sm text-gray-400 mb-6">Trusted by organizations building inclusive, equitable systems</p>
        <div class="flex justify-center items-center gap-8 opacity-60">
          <div class="flex items-center gap-2">
            <i class="fa-solid fa-users text-indigo-400"></i>
            <span class="text-sm">Women-Owned</span>
          </div>
          <div class="flex items-center gap-2">
            <i class="fa-solid fa-heart text-purple-400"></i>
            <span class="text-sm">Queer-Led</span>
          </div>
          <div class="flex items-center gap-2">
            <i class="fa-solid fa-accessibility text-cyan-400"></i>
            <span class="text-sm">ADA Focused</span>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
