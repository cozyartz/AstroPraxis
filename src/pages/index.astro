---
import BaseLayout from '../layouts/BaseLayout.astro';
import LucideIcon from '../components/LucideIcon.astro';

const highlights = [
  {
    icon: "settings",
    label: "Systems Strategy",
    desc: "From decision frameworks to scalable automation, we help teams move with clarity and purpose."
  },
  {
    icon: "scale",
    label: "Equity Consulting",
    desc: "Anti-performative equity work that integrates into how you actually operate and serve your community."
  },
  {
    icon: "bot",
    label: "AI Development",
    desc: "Ethical AI solutions, automation, and intelligent systems that enhance human capabilities."
  },
  {
    icon: "zap",
    label: "Aerial Intelligence",
    desc: "Certified drone operations for mapping, environmental sensing, and spatial storytelling."
  },
  {
    icon: "presentation",
    label: "Instructional Design",
    desc: "Inclusive learning systems, adult education strategy, and digital curriculum development."
  },
  {
    icon: "accessibility",
    label: "ADA & Disability Advocacy",
    desc: "Accessible systems, audits, policy advising, and lived-experience-informed implementation."
  }
];
---

<BaseLayout 
  title="AstroPraxis Consulting - Transforming Systems, Building Possibilities"
  description="Women-owned, queer-led consultancy specializing in equity-centered systems transformation, AI development, ADA compliance, and inclusive design. Based in Battle Creek, Michigan."
  keywords="equity consulting, systems strategy, ADA compliance, AI development, artificial intelligence, instructional design, Battle Creek Michigan consultancy, inclusive design, disability advocacy, aerial intelligence, drone services, transformative consulting, women-owned business, queer-led consulting"
>
  <!-- HERO SECTION -->
  <section class="relative overflow-hidden mesh-bg py-20 lg:py-32">
    <!-- Cosmic Background Elements -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute inset-0 cyber-grid"></div>
      <div class="particle" style="left: 10%; animation-delay: 0s;"></div>
      <div class="particle" style="left: 20%; animation-delay: 3s;"></div>
      <div class="particle" style="left: 30%; animation-delay: 6s;"></div>
      <div class="particle" style="left: 40%; animation-delay: 9s;"></div>
      <div class="particle" style="left: 50%; animation-delay: 12s;"></div>
      <div class="particle" style="left: 60%; animation-delay: 2s;"></div>
      <div class="particle" style="left: 70%; animation-delay: 5s;"></div>
      <div class="particle" style="left: 80%; animation-delay: 8s;"></div>
      <div class="particle" style="left: 90%; animation-delay: 11s;"></div>
    </div>
    
    <!-- Enhanced Floating Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/4 left-1/4 w-8 h-8 bg-gradient-to-r from-primary-400 to-accent-400 rounded-full cosmic-float opacity-40 blur-sm"></div>
      <div class="absolute top-1/3 right-1/3 w-4 h-4 bg-gradient-to-r from-accent-400 to-primary-400 rounded-full cosmic-float opacity-60 blur-sm" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-1/4 left-1/3 w-12 h-12 bg-gradient-to-r from-primary-300 to-accent-300 rounded-full cosmic-float opacity-20 blur-md" style="animation-delay: 4s;"></div>
      <div class="absolute top-2/3 right-1/4 w-6 h-6 bg-gradient-to-r from-accent-300 to-primary-300 rounded-full cosmic-float opacity-50 blur-sm" style="animation-delay: 6s;"></div>
      <div class="absolute top-1/2 left-1/6 w-3 h-3 neon-border rounded-full cosmic-float opacity-70" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-1/3 right-1/5 w-5 h-5 neon-border rounded-full cosmic-float opacity-50" style="animation-delay: 8s;"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-6 text-center">
      <div class="animate-fade-in-up">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight mb-8 hologram-text cosmic-float" data-text="Strategy for Systems That Actually Work">
          Strategy for Systems That Actually Work
        </h1>
        
        <p class="text-xl md:text-2xl text-neutral-600 mb-6 max-w-4xl mx-auto leading-relaxed">
          We are a collective of women-owned, queer-led consultants, designers, technologists, and facilitators.
        </p>
        
        <p class="text-lg md:text-xl text-primary-700 font-semibold mb-12 max-w-3xl mx-auto">
          We help people transform the structures they are in and build the ones they need.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-up" style="animation-delay: 0.2s;">
          <a
            href="/services"
            class="btn-accent group"
          >
            <LucideIcon name="zap" class="w-5 h-5 group-hover:animate-subtle-pulse mr-2" />
            Explore Our Services
            <LucideIcon name="arrow-right" class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" />
          </a>
          
          <a
            href="#what-we-offer"
            class="btn-secondary group"
          >
            <LucideIcon name="chevron-down" class="w-4 h-4 mr-2 animate-gentle-float" />
            Learn More
          </a>
        </div>
      </div>
      
      <!-- Trust Indicators -->
      <div class="mt-16 pt-8 border-t border-neutral-200 animate-fade-in-up" style="animation-delay: 0.4s;">
        <p class="text-sm text-neutral-500 mb-6">Trusted by organizations building inclusive, equitable systems</p>
        <div class="flex justify-center items-center gap-8 flex-wrap">
          <div class="flex items-center gap-2 badge badge-primary magnetic-hover glass-card">
            <LucideIcon name="users" class="w-6 h-6 text-primary-600" />
            <span class="font-medium">Women-Owned</span>
          </div>
          <div class="flex items-center gap-2 badge badge-accent magnetic-hover glass-card">
            <LucideIcon name="heart" class="w-6 h-6 text-accent-600" />
            <span class="font-medium">Queer-Led</span>
          </div>
          <div class="flex items-center gap-2 badge badge-success magnetic-hover glass-card">
            <LucideIcon name="accessibility" class="w-6 h-6 text-emerald-600" />
            <span class="font-medium">ADA Focused</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- WHAT WE OFFER -->
  <section id="what-we-offer" class="py-20 lg:py-32 section-light">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16 animate-fade-in-up">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-neutral-900">
          What We Offer
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto leading-relaxed">
          Comprehensive solutions designed to transform your systems and amplify your impact through equity-centered practices
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {highlights.map((service, index) => (
          <article class={`glass-card magnetic-hover tilt-hover group animate-fade-in-up relative overflow-hidden`} style={`animation-delay: ${index * 0.1}s;`}>
            <!-- Enhanced Icon Container -->
            <div class="mb-6 relative">
              <div class="w-16 h-16 bg-gradient-to-br from-primary-400 to-accent-400 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-all duration-500 pulse-orb shadow-lg group-hover:shadow-2xl">
                <LucideIcon name={service.icon} class="w-8 h-8 text-white group-hover:text-white transition-all duration-300 relative z-10 drop-shadow-lg" />
              </div>
              <div class="absolute inset-0 w-16 h-16 bg-gradient-to-br from-accent-400 to-primary-400 rounded-2xl opacity-0 group-hover:opacity-30 transition-opacity duration-500 blur-xl"></div>
            </div>

            <!-- Content -->
            <div class="space-y-4">
              <h3 class="text-xl font-bold text-neutral-900 group-hover:text-primary-700 transition-colors duration-300">
                {service.label}
              </h3>
              <p class="text-neutral-600 leading-relaxed">
                {service.desc}
              </p>
            </div>

            <!-- Hover Indicator -->
            <div class="mt-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="flex items-center text-primary-600 font-semibold text-sm">
                <span>Learn more</span>
                <LucideIcon name="arrow-right" class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" />
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Bottom CTA -->
      <div class="text-center mt-16 animate-fade-in-up" style="animation-delay: 0.6s;">
        <a
          href="/services"
          class="btn-primary group hover-glow"
        >
          <span>Explore All Services</span>
          <LucideIcon name="arrow-right" class="w-4 h-4 ml-2 group-hover:translate-x-2 transition-transform duration-300" />
        </a>
      </div>
    </div>
  </section>

  <!-- STATS SECTION -->
  <section class="py-20 relative overflow-hidden">
    <!-- Glass Morphism Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-white via-primary-50 to-accent-50 opacity-80"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-primary-100/20 via-transparent to-accent-100/20"></div>
    
    <div class="relative max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-8 text-center">
        <div class="animate-fade-in-up glass-ultra rounded-3xl p-8 tilt-hover">
          <div class="text-6xl font-bold hologram-text mb-4 cosmic-float" data-text="5+">5+</div>
          <div class="text-neutral-700 font-semibold text-lg">Years of Impact</div>
        </div>
        <div class="animate-fade-in-up glass-ultra rounded-3xl p-8 tilt-hover" style="animation-delay: 0.2s;">
          <div class="text-6xl font-bold hologram-text mb-4 cosmic-float" data-text="100%" style="animation-delay: 1s;">100%</div>
          <div class="text-neutral-700 font-semibold text-lg">Equity-Centered</div>
        </div>
        <div class="animate-fade-in-up glass-ultra rounded-3xl p-8 tilt-hover" style="animation-delay: 0.4s;">
          <div class="text-6xl font-bold hologram-text mb-4 cosmic-float" data-text="∞" style="animation-delay: 2s;">∞</div>
          <div class="text-neutral-700 font-semibold text-lg">Possibilities</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA SECTION -->
  <section class="py-20 lg:py-32 relative overflow-hidden mesh-bg">
    <div class="max-w-5xl mx-auto px-6 text-center">
      <div class="animate-fade-in-up">
        <h2 class="text-4xl md:text-5xl font-bold mb-8 text-neutral-900">
          Let's Build Something Better
        </h2>
        
        <p class="text-xl md:text-2xl text-neutral-700 mb-6 leading-relaxed max-w-4xl mx-auto">
          Reach out to explore a collaboration, or tell us what is not working yet.
        </p>
        
        <p class="text-lg text-primary-700 font-semibold mb-12">
          We will meet you with care and possibility.
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-fade-in-up" style="animation-delay: 0.2s;">
        <a
          href="https://queerlyqualified.formaloo.me/ejys27"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-accent group hover-glow animate-shine"
        >
          <LucideIcon name="message" class="w-5 h-5 mr-3 group-hover:animate-subtle-pulse" />
          Start the Conversation
          <LucideIcon name="arrow-right" class="w-4 h-4 ml-3 group-hover:translate-x-1 transition-transform" />
        </a>

        <div class="flex items-center gap-4 text-neutral-400">
          <div class="w-px h-8 bg-neutral-300"></div>
          <span class="text-sm font-medium">or</span>
          <div class="w-px h-8 bg-neutral-300"></div>
        </div>

        <a
          href="/services"
          class="btn-secondary group"
        >
          <LucideIcon name="eye" class="w-5 h-5 mr-3 group-hover:scale-110 transition-transform" />
          View Our Services
        </a>
      </div>

      <!-- Contact Info -->
      <div class="mt-20 pt-16 animate-fade-in-up" style="animation-delay: 0.4s;">
        <div class="glass-ultra rounded-3xl p-12 max-w-3xl mx-auto relative overflow-hidden magnetic-hover">
          <!-- Background glow effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-primary-500/10 via-accent-500/10 to-primary-500/10 opacity-50 blur-3xl"></div>
          
          <div class="relative z-10">
            <p class="hologram-text font-bold text-2xl mb-6" data-text="Ready to get started?">Ready to get started?</p>
            <p class="text-neutral-700 mb-8 text-lg">
              Based in Battle Creek, Michigan, serving organizations nationwide
            </p>
            <div class="flex justify-center items-center gap-6 text-base text-neutral-600 flex-wrap">
              <div class="flex items-center gap-3 badge badge-primary cosmic-float glass-card">
                <LucideIcon name="map-pin" class="w-6 h-6 text-primary-600" />
                <span class="font-semibold">Michigan</span>
              </div>
              <div class="flex items-center gap-3 badge badge-accent cosmic-float glass-card" style="animation-delay: 1s;">
                <LucideIcon name="globe" class="w-6 h-6 text-accent-600" />
                <span class="font-semibold">Remote-First</span>
              </div>
              <div class="flex items-center gap-3 badge badge-success cosmic-float glass-card" style="animation-delay: 2s;">
                <LucideIcon name="handshake" class="w-6 h-6 text-emerald-600" />
                <span class="font-semibold">Collaborative</span>
              </div>
            </div>
            
            <!-- Team member links -->
            <div class="mt-8 pt-8 border-t border-white/20">
              <p class="text-sm text-neutral-600 mb-4">Meet our team:</p>
              <div class="flex justify-center gap-6">
                <a href="https://andreacozart.me" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 glass-card px-4 py-2 rounded-full hover:scale-105 transition-all duration-300">
                  <span class="text-sm font-medium text-primary-700">Andrea Cozart</span>
                  <LucideIcon name="external-link" class="w-4 h-4 text-primary-600" />
                </a>
                <a href="https://amylundin.me" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 glass-card px-4 py-2 rounded-full hover:scale-105 transition-all duration-300">
                  <span class="text-sm font-medium text-accent-700">Amy Lundin</span>
                  <LucideIcon name="external-link" class="w-4 h-4 text-accent-600" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>