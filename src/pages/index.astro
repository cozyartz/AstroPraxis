---
import BaseLayout from '../layouts/BaseLayout.astro';

const highlights = [
  {
    icon: "fa-gears",
    label: "Systems Strategy",
    desc: "From decision frameworks to scalable automation, we help teams move with clarity."
  },
  {
    icon: "fa-scale-balanced",
    label: "Equity Consulting",
    desc: "Anti-performative equity work that integrates into how you actually operate."
  },
  {
    icon: "fa-drone",
    label: "Aerial Intelligence",
    desc: "Certified drone ops for mapping, environmental sensing, and spatial storytelling."
  },
  {
    icon: "fa-chalkboard-user",
    label: "Instructional Design",
    desc: "Inclusive learning systems, adult education strategy, and digital curriculum builds."
  },
  {
    icon: "fa-photo-film",
    label: "Media & Narrative",
    desc: "We help orgs shift power through visual storytelling and mission-aligned design."
  },
  {
    icon: "fa-wheelchair",
    label: "ADA & Disability Advocacy",
    desc: "Accessible systems, audits, policy advising, and lived-experience-informed implementation."
  }
];
---

<BaseLayout title="Home | AstroPraxis">
  <!-- HERO SECTION -->
  <section
    class="bg-gradient-to-br from-indigo-950 via-purple-900 to-black text-white py-32 px-6 text-center animate-fade-in"
    role="region"
    aria-labelledby="hero-heading"
  >
    <div class="max-w-4xl mx-auto prose prose-invert">
      <h1 id="hero-heading" class="text-5xl font-extrabold leading-tight tracking-tight">
        Strategy for Systems That Actually Work
      </h1>
      <p class="text-lg text-gray-300 mb-10">
        We are a collective of women-owned, queer-led consultants, designers, technologists, and facilitators.
        We help people transform the structures they are in and build the ones they need.
      </p>
      <a
        href="/services"
        class="inline-flex items-center gap-2 bg-black border border-white text-white px-5 py-2 rounded-md text-sm font-semibold hover:bg-white hover:text-black transition"
      >
        <i class="fa-solid fa-arrow-right text-sm" aria-hidden="true"></i>
        Explore Our Services
      </a>
    </div>
  </section>

  <!-- WHAT WE OFFER -->
  <section
    class="py-20 px-6 bg-black text-white animate-fade-in"
    role="region"
    aria-labelledby="offer-heading"
  >
    <div class="max-w-6xl mx-auto">
      <h2 id="offer-heading" class="text-3xl font-bold text-center mb-12">What We Offer</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {highlights.map((h) => (
          <article
            class="bg-gray-900 border border-indigo-700 rounded-xl p-6 shadow hover:shadow-xl transition-all duration-300 animate-fade-in"
            aria-label={h.label}
          >
            <div class="flex items-center space-x-3 mb-3">
              <i class={`fas ${h.icon} text-xl text-indigo-400`} aria-hidden="true"></i>
              <h3 class="text-lg font-semibold">{h.label}</h3>
            </div>
            <p class="text-sm text-gray-300">{h.desc}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA SECTION -->
  <section class="bg-indigo-700 text-white text-center py-20 px-6 fade-in">
    <div class="max-w-2xl mx-auto">
      <h2 class="text-3xl font-bold mb-4">Let's Build Something Better</h2>
      <p class="text-base text-gray-200 mb-8 leading-relaxed">
        Reach out to explore a collaboration, or tell us what is not working yet.
        We will meet you with care and possibility.
      </p>

      <a
        href="https://queerlyqualified.formaloo.me/ejys27"
        target="_blank"
        rel="noopener noreferrer"
        class="codepen-button w-fit mx-auto"
      >
        <span class="px-4 py-2 text-sm">
          <i class="fa-solid fa-message mr-2 text-sm" aria-hidden="true"></i>
          Start the Conversation
        </span>
      </a>
    </div>
  </section>
</BaseLayout>
