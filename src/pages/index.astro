import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.tsx';
import ServicesShowcase from '../components/ServicesShowcase.tsx';
import StatsSection from '../components/StatsSection.tsx';
import CTASection from '../components/CTASection.tsx';

const title = "AstroPraxis Consulting - Transforming Systems, Building Possibilities";
const description = "Women-owned, queer-led consultancy specializing in equity-centered systems transformation, AI development, ADA compliance, and inclusive design. Based in Battle Creek, Michigan.";
