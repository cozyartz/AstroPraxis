---
import BaseLayout from '../layouts/BaseLayout.astro';
import LucideIcon from '../components/LucideIcon.astro';

const callToActions = [
  "Start something bold.",
  "Begin your systems reboot.",
  "Let’s build it together.",
  "Spark a collaboration.",
  "Design with care."
];

const ctaText = callToActions[Math.floor(Math.random() * callToActions.length)];
---

<BaseLayout
  title="Contact AstroPraxis | Get in Touch with Our Consulting Team"
  description="Ready to transform your systems? Contact AstroPraxis Consulting today. Based in Battle Creek, Michigan, serving organizations nationwide. Phone: 269-222-4330 | Email: hello@astropraxis.cc"
  canonical="https://astropraxis.cc/contact"
  keywords="contact AstroPraxis, Battle Creek Michigan consultancy, equity consulting contact, systems strategy consultation, ADA compliance consultation, 269-222-4330, hello@astropraxis.cc, Michigan consulting, West Michigan, Southwest Michigan"
  type="website"
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden section-modern particle-bg py-20 lg:py-32">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0 pattern-dots"></div>
    </div>
    
    <!-- Floating Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 left-1/4 w-4 h-4 bg-primary-200 rounded-full animate-gentle-float opacity-60"></div>
      <div class="absolute top-1/3 right-1/3 w-2 h-2 bg-accent-200 rounded-full animate-gentle-float opacity-40" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-1/4 left-1/3 w-6 h-6 bg-primary-100 rounded-full animate-gentle-float opacity-30" style="animation-delay: 4s;"></div>
      <div class="absolute top-2/3 right-1/4 w-3 h-3 bg-accent-100 rounded-full animate-gentle-float opacity-50" style="animation-delay: 6s;"></div>
    </div>

    <div class="relative z-10 max-w-5xl mx-auto px-6 text-center">
      <div class="animate-fade-in-up">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight mb-8 holographic">
          Let's Connect
        </h1>
        
        <p class="text-xl md:text-2xl text-neutral-600 mb-6 max-w-4xl mx-auto leading-relaxed">
          Whether you're curious about working together or already know what you need, we'd love to hear from you.
        </p>
        
        <p class="text-lg md:text-xl text-primary-700 font-semibold mb-12 max-w-3xl mx-auto">
          AstroPraxis brings deep, strategic collaboration across sectors. Let's talk ideas, systems, people, and the real work of change.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Info & What to Expect -->
  <section class="py-20 lg:py-32 section-light">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-16 animate-fade-in-up">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-neutral-900">
          Start the Conversation
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto leading-relaxed">
          Use the contact form below to tell us a bit about your needs. We'll get back to you within 2–3 business days.
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-2 max-w-5xl mx-auto">
        <!-- Contact Info -->
        <div class="card-modern animate-fade-in-up">
          <div class="mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-100 to-accent-100 rounded-2xl flex items-center justify-center mb-4">
              <LucideIcon name="phone" class="w-8 h-8 text-primary-600" />
            </div>
            <h3 class="text-xl font-bold text-neutral-900 mb-4">Contact Info</h3>
          </div>
          
          <div class="space-y-4 text-neutral-700">
            <div class="flex items-center gap-3">
              <LucideIcon name="phone" class="w-5 h-5 text-primary-500" />
              <a href="tel:2692224330" class="text-primary-600 hover:text-primary-700 font-semibold transition-colors">
                269.222.4330
              </a>
            </div>
            <div class="flex items-center gap-3">
              <LucideIcon name="mail" class="w-5 h-5 text-primary-500" />
              <a href="mailto:hello@astropraxis.cc" class="text-primary-600 hover:text-primary-700 font-semibold transition-colors">
                hello@astropraxis.cc
              </a>
            </div>
            <div class="flex items-center gap-3">
              <LucideIcon name="map-pin" class="w-5 h-5 text-primary-500" />
              <span class="text-neutral-600">Battle Creek, Michigan</span>
            </div>
            <div class="flex items-center gap-3">
              <LucideIcon name="globe" class="w-5 h-5 text-primary-500" />
              <span class="text-neutral-600">Serving teams & orgs nationwide</span>
            </div>
          </div>
        </div>

        <!-- What to Expect -->
        <div class="card-modern animate-fade-in-up" style="animation-delay: 0.2s;">
          <div class="mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-100 to-accent-100 rounded-2xl flex items-center justify-center mb-4">
              <LucideIcon name="heart" class="w-8 h-8 text-primary-600" />
            </div>
            <h3 class="text-xl font-bold text-neutral-900 mb-4">What to Expect</h3>
          </div>
          
          <div class="space-y-4 text-neutral-600">
            <p class="leading-relaxed">
              We're a real group of real people — not a vendor machine. We tailor our responses and proposals to your needs.
              <strong class="text-primary-700">Be honest. Be curious. Be weird. We are.</strong>
            </p>
            <p class="leading-relaxed">
              From strategy and storytelling to tech and trauma-informed consulting,
              we'll meet you where you're at — and push gently from there.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-16 animate-fade-in-up">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-neutral-900">
          Our Collaboration Process
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto leading-relaxed">
          From first hello to full collaboration, here's what to expect when you connect with AstroPraxis.
        </p>
      </div>

      <div class="grid md:grid-cols-4 gap-6 mb-16">
        {[
          {
            number: "1",
            title: "Real Attention",
            desc: "We read your message with real attention — not automation.",
            delay: "0s"
          },
          {
            number: "2", 
            title: "Care & Clarity",
            desc: "You'll hear back in 2–3 business days with care and clarity.",
            delay: "0.1s"
          },
          {
            number: "3",
            title: "Co-Design",
            desc: "We co-design a path forward — no assumptions, no pressure.",
            delay: "0.2s"
          },
          {
            number: "4",
            title: "Collaboration",
            desc: "We collaborate with integrity, insight, and mutual respect.",
            delay: "0.3s"
          }
        ].map((step) => (
          <div class={`card text-center animate-fade-in-up`} style={`animation-delay: ${step.delay};`}>
            <div class="w-16 h-16 bg-gradient-to-br from-primary-100 to-accent-100 rounded-2xl flex items-center justify-center mb-4 mx-auto">
              <span class="text-2xl font-bold text-primary-600">{step.number}</span>
            </div>
            <h3 class="text-lg font-bold text-neutral-900 mb-3">{step.title}</h3>
            <p class="text-neutral-600 text-sm leading-relaxed">{step.desc}</p>
          </div>
        ))}
      </div>

      <!-- CTA Button -->
      <div class="text-center animate-fade-in-up" style="animation-delay: 0.4s;">
        <a
          href="https://queerlyqualified.formaloo.me/ejys27"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-accent group hover-glow animate-shine"
        >
          <LucideIcon name="message" class="w-5 h-5 mr-3 group-hover:animate-subtle-pulse" />
          Start the Conversation
          <LucideIcon name="arrow-right" class="w-4 h-4 ml-3 group-hover:translate-x-1 transition-transform" />
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
