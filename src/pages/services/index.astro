---
import BaseLayout from '../../layouts/BaseLayout.astro';
import services from '../../content/services.json';
---

<BaseLayout
  title="AstroPraxis Services"
  description="Explore our strategic offerings and design-centered services for mission-driven organizations."
  canonical="https://astropraxis.cc/services"
  ogImage="/images/og-services.jpg"
>
  <section class="bg-black text-white py-24 px-6 text-center">
    <div class="max-w-3xl mx-auto mb-12 space-y-4">
      <h1 class="text-5xl font-bold">What We Offer</h1>
      <p class="text-lg text-gray-300">
        From decision frameworks to scalable automation, we help teams move with clarity.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {services.map((service) => (
        <a
          href={`/services/${service.slug}`}
          class="group block border border-gray-800 rounded-lg p-6 bg-gradient-to-b from-gray-950 to-black hover:border-indigo-500 transition"
        >
          <div class="flex items-center gap-4 mb-4">
            <i class={`${service.icon} text-indigo-400 text-2xl`} aria-hidden="true"></i>
            <h2 class="text-xl font-semibold group-hover:text-indigo-400 transition">
              {service.title}
            </h2>
          </div>
          <p class="text-sm text-gray-400">{service.summary}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
