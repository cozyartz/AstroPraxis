---
import SeoMeta from '../components/SeoMeta.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <SeoMeta
    title="AstroPraxis | Strategy & Design for Systems Change"
    description="AstroPraxis is a women-owned, queer-led consultancy supporting equity-driven organizations through systems thinking, inclusive design, and strategic facilitation."
    canonical="https://astropraxis.cc/"
    image="https://astropraxis.cc/og-image.jpg"
  />

  <section class="bg-black text-white py-24 px-6 text-center">
    <div class="max-w-3xl mx-auto space-y-6">
      <h1 class="text-5xl font-bold">Systems Change by Design</h1>
      <p class="text-xl text-gray-300">
        AstroPraxis partners with mission-driven teams to build equitable strategies, products, and practices.
      </p>
    </div>
  </section>

  <section class="bg-gray-950 text-white py-20 px-6">
    <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-12">
      <div>
        <h2 class="text-2xl font-semibold mb-4">What We Do</h2>
        <p class="text-gray-400">
          From workshops to product design, from community tech to systems strategy, we apply a creative, equity-centered lens to every engagement.
        </p>
      </div>
      <div>
        <h2 class="text-2xl font-semibold mb-4">Who We Work With</h2>
        <p class="text-gray-400">
          Our collaborators include nonprofits, cooperatives, public sector teams, and startups aligning values with action.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
