---
import BaseLayout from '../layouts/BaseLayout.astro';

const problems = [
  {
    title: "Disconnected Systems",
    icon: "fa-duotone fa-sitemap",
    desc: "You’re using five tools that don’t talk to each other. Your team is doing triple work. We help integrate, streamline, and automate so you can focus."
  },
  {
    title: "Organizational Growing Pains",
    icon: "fa-sharp fa-thin fa-people-arrows",
    desc: "You’ve outgrown the way you operate — but don't know what’s next. We help you realign your vision, people, and systems."
  },
  {
    title: "Equity Fatigue",
    icon: "fa-sharp fa-thin fa-heart-crack",
    desc: "You’ve tried to build equitable practices, but it's felt superficial or extractive. We help root equity in your operations, not just your slides."
  },
  {
    title: "Unclear Communication",
    icon: "fa-duotone fa-comments",
    desc: "Whether it’s curriculum, internal docs, or your mission — we help you clarify what you mean and how you say it."
  }
];

const services = [
  {
    title: "Organizational Strategy & Facilitation",
    icon: "fa-sharp fa-solid fa-compass-drafting",
    desc: "Strategic planning, decision-making frameworks, retreat design, and trauma-informed facilitation for complex teams."
  },
  {
    title: "Equity & Access Consulting",
    icon: "fa-sharp fa-solid fa-scale-balanced",
    desc: "Policy audits, inclusive design sprints, DEI systems consulting, and workshop delivery that’s anti-performative and embodied."
  },
  {
    title: "Instructional Design & Learning Systems",
    icon: "fa-sharp fa-solid fa-chalkboard-user",
    desc: "Curriculum builds, eLearning dev, LMS strategy, and UDL-driven experiences for adult learners and staff."
  },
  {
    title: "Tech, Automation & Systems Integration",
    icon: "fa-sharp fa-solid fa-gears",
    desc: "We build low-code tools, streamline ops, automate workflows, and design internal systems that actually help people."
  },
  {
    title: "Environmental Sensing & Drone Operations",
    icon: "fa-sharp fa-solid fa-drone",
    desc: "FAA-certified aerial data collection, inspection, mapping, and environmental sensing for infrastructure, planning, or research."
  },
  {
    title: "ADA Compliance & Disability Advocacy",
    icon: "fa-sharp fa-solid fa-wheelchair",
    desc: "Audits, advisory, and strategic implementation for accessibility — from web apps to internal culture. Informed by lived experience and policy fluency."
  },
  {
    title: "Media & Narrative Systems",
    icon: "fa-sharp fa-solid fa-photo-film",
    desc: "We produce mission-aligned media, visual storytelling, and narrative systems that move people and shift power."
  },
  {
    title: "Business & Ops Consulting",
    icon: "fa-sharp fa-solid fa-briefcase",
    desc: "Org design, internal documentation, operations audits, and startup scaffolding from day 1 to scale."
  },
  {
    title: "Higher Ed & International Education Strategy",
    icon: "fa-sharp fa-solid fa-graduation-cap",
    desc: "Admissions design, intercultural systems, international student programs, and academic support frameworks."
  }
];
---

<BaseLayout title="Services | AstroPraxis">
  <section class="bg-gradient-to-b from-black via-gray-900 to-black text-white py-24 px-6 text-center fade-in opacity-0 translate-y-6">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-4xl font-bold mb-6">Services We Offer</h1>
      <p class="text-lg text-gray-400">
        Our clients come to us when they’re ready to build something different — or rebuild what isn’t working.
        We help transform systems, stories, and structures with care and clarity.
      </p>
    </div>
  </section>

  <section class="py-16 px-6 bg-black text-white fade-in opacity-0 translate-y-6">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold mb-8 text-center">What We Solve</h2>
      <div class="grid md:grid-cols-2 gap-8">
        {problems.map(p => (
          <div class="bg-gray-900 border border-indigo-700 rounded-xl p-6 shadow-md hover:shadow-xl transition fade-in opacity-0 translate-y-6">
            <div class="flex items-center space-x-3 mb-3">
              <i class={`${p.icon} text-xl text-indigo-400`}></i>
              <h3 class="text-lg font-semibold">{p.title}</h3>
            </div>
            <p class="text-sm text-gray-300">{p.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 px-6 bg-gray-950 text-white fade-in opacity-0 translate-y-6">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold mb-10 text-center">What We Deliver</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map(s => (
          <div class="bg-gray-900 border border-indigo-600 rounded-xl p-6 shadow-md hover:shadow-2xl transition fade-in opacity-0 translate-y-6">
            <div class="flex items-center space-x-3 mb-4">
              <i class={`${s.icon} text-2xl text-indigo-400`}></i>
              <h3 class="text-lg font-semibold">{s.title}</h3>
            </div>
            <p class="text-sm text-gray-300">{s.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  <section class="bg-indigo-700 text-white text-center py-20 px-6 fade-in opacity-0 translate-y-6">
    <h2 class="text-3xl font-bold mb-4">Let’s Build Something Better</h2>
    <p class="text-lg mb-6">Reach out to explore a collaboration — or tell us what’s not working yet. We’ll meet you with care and possibility.</p>
    <a href="/contact" class="inline-block bg-white text-indigo-800 px-6 py-3 rounded-full font-semibold hover:bg-gray-100 transition">
      Contact Us
    </a>
  </section>
</BaseLayout>