  },
  {
    slug: "systems-integration",
    title: "Tech, Automation & Systems Integration",
    icon: "fa-sharp fa-solid fa-gears",
    desc: "We build low-code tools, streamline ops, automate workflows, and design internal systems that actually help people."
  },
  {
    slug: "drone-ops",
    title: "Environmental Sensing & Drone Operations",
    icon: "fa-sharp fa-solid fa-drone",
    desc: "FAA-certified aerial data collection, inspection, mapping, and environmental sensing for infrastructure, planning, or research."
  },
  {
    slug: "ada-advocacy",
    title: "ADA Compliance & Disability Advocacy",
    icon: "fa-sharp fa-solid fa-wheelchair",
