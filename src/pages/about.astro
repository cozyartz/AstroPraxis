---
import BaseLayout from '../layouts/BaseLayout.astro';
import LucideIcon from '../components/LucideIcon.astro';

const team = [
  {
    name: "Andrea Cozart Lundin",
    role: "Creative Director & Spatial Strategist",
    bio: "FAA-certified drone pilot, multimedia strategist, and narrative systems thinker. Andrea leads creative direction across visual storytelling, site-based media, and spatial impact design.",
    image: "/images/andrea.webp",
    links: {
      linkedin: "https://www.linkedin.com/in/andrea-cozart-lundin/",
      website: "https://andreacozart.me",
      github: "https://github.com/cozyartz",
      linkhub: "https://link.andreacozart.me"
    }
  },
  {
    name: "Amy Cozart Lundin",
    role: "Learning Architect & Accessibility Designer",
    bio: "Instructional designer and accessibility nerd. Amy builds inclusive learning systems and leads strategic training for organizations rethinking how people grow.",
    image: "/images/amy.webp",
    links: {
      linkedin: "https://www.linkedin.com/in/amycozartlundin/",
      website: "https://amylundin.me",
      github: "https://github.com/grammar-nerd/grammar-nerd"
    }
  },
  {
    name: "Kyla Kremhelmer",
    role: "Rehabilitation & Disability Consultant",
    bio: "Kyla works at the intersection of rehabilitation, trauma-informed practice, and accessibility, helping clients navigate complex systems with clarity and support.",
    image: "/images/kyla.webp",
    links: {
      linkedin: "https://www.linkedin.com/in/kyla-kremhelmer-54972b137/"
    }
  },
  {
    name: "Nicole Hoffman",
    role: "International Education Advisor",
    bio: "Nicole brings global education systems expertise, admissions design, and intercultural knowledge to international student engagement and institutional strategy.",
    image: "/images/nicole.webp",
    links: {
      linkedin: "https://www.linkedin.com/in/nicolemhoffman/"
    }
  },
  {
    name: "Rebecca Judkins",
    role: "Instructional Designer & Technical Writer",
    bio: "Rebecca turns complex information into accessible, inclusive, and well-structured content. Her work bridges technical clarity and human connection.",
    image: "/images/rebecca.webp",
    links: {
      linkedin: "https://www.linkedin.com/in/rebecca-judkins-65200b171/"
    }
  }
];
---

<BaseLayout
  title="About Us - AstroPraxis Team | Women-Owned, Queer-Led Consultancy"
  description="Meet the AstroPraxis team - Andrea Cozart Lundin, Amy Cozart Lundin, Kyla Kremhelmer, Nicole Hoffman, and Rebecca Judkins. Women-owned, queer-led consultancy specializing in equity, systems transformation, and inclusive design."
  canonical="https://astropraxis.cc/about"
  keywords="AstroPraxis team, Andrea Cozart Lundin, Amy Cozart Lundin, women-owned consultancy, queer-led business, equity consultants, systems strategists, accessibility designers, instructional designers, Battle Creek Michigan"
  type="website"
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden section-modern particle-bg py-20 lg:py-32">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0 pattern-dots"></div>
    </div>
    
    <!-- Floating Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 left-1/4 w-4 h-4 bg-primary-200 rounded-full animate-gentle-float opacity-60"></div>
      <div class="absolute top-1/3 right-1/3 w-2 h-2 bg-accent-200 rounded-full animate-gentle-float opacity-40" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-1/4 left-1/3 w-6 h-6 bg-primary-100 rounded-full animate-gentle-float opacity-30" style="animation-delay: 4s;"></div>
      <div class="absolute top-2/3 right-1/4 w-3 h-3 bg-accent-100 rounded-full animate-gentle-float opacity-50" style="animation-delay: 6s;"></div>
    </div>

    <div class="relative z-10 max-w-5xl mx-auto px-6 text-center">
      <div class="animate-fade-in-up">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight mb-8 holographic">
          The AstroPraxis Collective
        </h1>
        
        <p class="text-xl md:text-2xl text-neutral-600 mb-6 max-w-4xl mx-auto leading-relaxed">
          We are a constellation of educators, tech strategists, systems thinkers, and equity workers.
        </p>
        
        <p class="text-lg md:text-xl text-primary-700 font-semibold mb-12 max-w-3xl mx-auto">
          Together, we help communities and organizations design what's next â€” and do it with integrity.
        </p>
      </div>
    </div>
  </section>

  <!-- Team Grid -->
  <section class="py-20 lg:py-32 section-light" role="region" aria-label="Team Profiles">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16 animate-fade-in-up">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-neutral-900">
          Meet Our Team
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto leading-relaxed">
          A diverse collective of strategists, designers, and advocates working to transform systems from the inside out.
        </p>
      </div>

      <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {team.map((person, index) => (
          <article class={`card-modern interactive-card group animate-fade-in-up`} 
                   style={`animation-delay: ${index * 0.15}s;`}
                   aria-labelledby={`${person.name.replace(/\s/g, '-').toLowerCase()}-name`}>
            <!-- Profile Image with Pulse Effect -->
            <div class="relative mb-6 mx-auto w-32 h-32 pulse-orb">
              <img
                src={person.image}
                alt={`Portrait of ${person.name}, ${person.role}`}
                class="w-32 h-32 rounded-full object-cover border-4 border-primary-200 shadow-lg mx-auto relative z-10 group-hover:border-primary-400 transition-colors duration-300"
              />
            </div>
            
            <!-- Content -->
            <div class="text-center space-y-4">
              <div class="space-y-2">
                <h3 id={`${person.name.replace(/\s/g, '-').toLowerCase()}-name`} class="text-xl font-bold text-neutral-900 group-hover:text-primary-700 transition-colors duration-300">
                  {person.name}
                </h3>
                <p class="text-primary-600 font-semibold text-sm tracking-wide uppercase">
                  {person.role}
                </p>
              </div>
              
              <p class="text-neutral-600 leading-relaxed text-sm">
                {person.bio}
              </p>
              
              <!-- Social Links -->
              <div class="flex justify-center gap-4 pt-4">
                {person.links.linkedin && (
                  <a href={person.links.linkedin} 
                     target="_blank" 
                     rel="noopener noreferrer" 
                     title="LinkedIn" 
                     aria-label={`LinkedIn: ${person.name}`}
                     class="p-3 rounded-full bg-primary-100 text-primary-600 hover:bg-primary-200 hover:text-primary-700 transition-all duration-300 hover:scale-110">
                    <LucideIcon name="linkedin" class="w-5 h-5" />
                  </a>
                )}
                {person.links.website && (
                  <a href={person.links.website} 
                     target="_blank" 
                     rel="noopener noreferrer" 
                     title="Website" 
                     aria-label={`Website: ${person.name}`}
                     class="p-3 rounded-full bg-primary-100 text-primary-600 hover:bg-primary-200 hover:text-primary-700 transition-all duration-300 hover:scale-110">
                    <LucideIcon name="globe" class="w-5 h-5" />
                  </a>
                )}
                {person.links.github && (
                  <a href={person.links.github} 
                     target="_blank" 
                     rel="noopener noreferrer" 
                     title="GitHub" 
                     aria-label={`GitHub: ${person.name}`}
                     class="p-3 rounded-full bg-primary-100 text-primary-600 hover:bg-primary-200 hover:text-primary-700 transition-all duration-300 hover:scale-110">
                    <LucideIcon name="github" class="w-5 h-5" />
                  </a>
                )}
                {person.links.linkhub && (
                  <a href={person.links.linkhub} 
                     target="_blank" 
                     rel="noopener noreferrer" 
                     title="Link Hub" 
                     aria-label={`Link Hub: ${person.name}`}
                     class="p-3 rounded-full bg-primary-100 text-primary-600 hover:bg-primary-200 hover:text-primary-700 transition-all duration-300 hover:scale-110">
                    <LucideIcon name="link" class="w-5 h-5" />
                  </a>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 lg:py-32 section-primary">
    <div class="max-w-5xl mx-auto px-6 text-center">
      <div class="animate-fade-in-up">
        <h2 class="text-4xl md:text-5xl font-bold mb-8 text-neutral-900">
          Let's Build Something Better
        </h2>
        
        <p class="text-xl md:text-2xl text-neutral-700 mb-6 leading-relaxed max-w-4xl mx-auto">
          Reach out to explore a collaboration, or tell us what is not working yet.
        </p>
        
        <p class="text-lg text-primary-700 font-semibold mb-12">
          We will meet you with care and possibility.
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-fade-in-up" style="animation-delay: 0.2s;">
        <a
          href="https://queerlyqualified.formaloo.me/ejys27"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-accent group hover-glow animate-shine"
        >
          <LucideIcon name="message" class="w-5 h-5 mr-3 group-hover:animate-subtle-pulse" />
          Start the Conversation
          <LucideIcon name="arrow-right" class="w-4 h-4 ml-3 group-hover:translate-x-1 transition-transform" />
        </a>

        <div class="flex items-center gap-4 text-neutral-400">
          <div class="w-px h-8 bg-neutral-300"></div>
          <span class="text-sm font-medium">or</span>
          <div class="w-px h-8 bg-neutral-300"></div>
        </div>

        <a
          href="/services"
          class="btn-secondary group"
        >
          <LucideIcon name="eye" class="w-5 h-5 mr-3 group-hover:scale-110 transition-transform" />
          View Our Services
        </a>
      </div>

      <!-- Contact Info -->
      <div class="mt-16 pt-12 border-t border-neutral-300 animate-fade-in-up" style="animation-delay: 0.4s;">
        <div class="glass-light rounded-2xl p-8 max-w-2xl mx-auto">
          <p class="text-neutral-700 font-semibold mb-4">Ready to get started?</p>
          <p class="text-neutral-600 mb-6">
            Based in Battle Creek, Michigan, serving organizations nationwide
          </p>
          <div class="flex justify-center items-center gap-6 text-sm text-neutral-500">
            <div class="flex items-center gap-2">
              <LucideIcon name="map-pin" class="w-5 h-5 text-primary-500" />
              <span>Michigan</span>
            </div>
            <div class="flex items-center gap-2">
              <LucideIcon name="globe" class="w-5 h-5 text-primary-500" />
              <span>Remote-First</span>
            </div>
            <div class="flex items-center gap-2">
              <LucideIcon name="handshake" class="w-5 h-5 text-primary-500" />
              <span>Collaborative</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
