---
import BaseLayout from '../layouts/BaseLayout.astro';
import LucideIcon from '../components/LucideIcon.astro';

const team = [
  {
    name: "Andrea Cozart",
    role: "Systems Strategy & Equity Consulting",
    bio: "Leading transformative systems change through equity-centered approaches and strategic frameworks.",
    website: "https://andreacozart.me",
    image: "/images/andrea.webp",
    skills: ["Systems Strategy", "Equity Consulting", "Organizational Transformation", "Strategic Planning"]
  },
  {
    name: "Amy Lundin", 
    role: "AI Development & Instructional Design",
    bio: "Building ethical AI solutions and inclusive learning systems that enhance human capabilities.",
    website: "https://amylundin.me",
    image: "/images/amy.webp", 
    skills: ["AI Development", "Instructional Design", "Technology Integration", "Accessibility"]
  }
];
---

<BaseLayout 
  title="About AstroPraxis - Our Team & Mission"
  description="Meet the women-owned, queer-led team behind AstroPraxis Consulting. Learn about our mission to transform systems and build equitable possibilities."
  keywords="about AstroPraxis, team, Andrea Cozart, Amy Lundin, women-owned consulting, queer-led business, equity consulting team, systems transformation experts"
>
  <!-- HERO SECTION -->
  <section class="relative overflow-hidden mesh-bg py-20 lg:py-32">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute inset-0 cyber-grid"></div>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-6 text-center">
      <div class="animate-fade-in-up">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight mb-8 hologram-text cosmic-float" data-text="Building Systems That Work">
          Building Systems That Work
        </h1>
        
        <p class="text-xl md:text-2xl text-neutral-700 mb-6 max-w-4xl mx-auto leading-relaxed">
          We are a collective of consultants, designers, technologists, and facilitators committed to transforming structures and building equitable possibilities.
        </p>
      </div>
    </div>
  </section>

  <!-- TEAM SECTION -->
  <section class="py-20 lg:py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-white via-primary-50 to-accent-50 opacity-80"></div>
    
    <div class="relative max-w-7xl mx-auto px-6">
      <div class="text-center mb-16 animate-fade-in-up">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-neutral-900">
          Meet Our Team
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto leading-relaxed">
          Experienced leaders bringing deep expertise in systems transformation, equity consulting, and inclusive design.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 max-w-5xl mx-auto">
        {team.map((member, index) => (
          <div class={`glass-ultra rounded-3xl p-8 magnetic-hover tilt-hover animate-fade-in-up`} style={`animation-delay: ${index * 0.2}s;`}>
            <div class="flex flex-col items-center text-center space-y-6">
              <!-- Profile Image -->
              <div class="relative">
                <div class="w-32 h-32 rounded-full overflow-hidden ring-4 ring-primary-200 shadow-2xl">
                  <img src={member.image} alt={member.name} class="w-full h-full object-cover" />
                </div>
                <div class="absolute -bottom-2 -right-2 w-12 h-12 bg-gradient-to-br from-primary-400 to-accent-400 rounded-full flex items-center justify-center shadow-lg">
                  <LucideIcon name="external-link" class="w-5 h-5 text-white" />
                </div>
              </div>

              <!-- Content -->
              <div class="space-y-4">
                <div>
                  <h3 class="text-2xl font-bold text-neutral-900 mb-2">{member.name}</h3>
                  <p class="text-lg font-semibold text-primary-600 mb-3">{member.role}</p>
                  <p class="text-neutral-600 leading-relaxed">{member.bio}</p>
                </div>

                <!-- Skills -->
                <div class="flex flex-wrap gap-2 justify-center">
                  {member.skills.map((skill) => (
                    <span class="badge badge-primary text-xs glass-card">{skill}</span>
                  ))}
                </div>

                <!-- Website Link -->
                <a 
                  href={member.website} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 btn-primary hover-glow animate-shine"
                >
                  <span>Visit Website</span>
                  <LucideIcon name="arrow-right" class="w-4 h-4" />
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- MISSION SECTION -->
  <section class="py-20 lg:py-32 section-primary">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Content -->
        <div class="animate-fade-in-up">
          <h2 class="text-4xl md:text-5xl font-bold mb-8 text-neutral-900">
            Our Mission
          </h2>
          
          <div class="space-y-6 text-lg text-neutral-700 leading-relaxed">
            <p>
              We believe that every system can be transformed to work better for the people within it. Our approach centers equity, accessibility, and human dignity in everything we do.
            </p>
            
            <p>
              As a women-owned, queer-led consultancy, we bring lived experience and deep expertise to help organizations build more inclusive, effective, and sustainable systems.
            </p>
            
            <p>
              We work with clients who are ready to move beyond performative change toward structural transformation that creates lasting impact.
            </p>
          </div>

          <div class="mt-10 flex flex-wrap gap-4">
            <div class="flex items-center gap-3 badge badge-primary glass-card">
              <LucideIcon name="users" class="w-6 h-6 text-primary-600" />
              <span class="font-semibold">Women-Owned</span>
            </div>
            <div class="flex items-center gap-3 badge badge-accent glass-card">
              <LucideIcon name="heart" class="w-6 h-6 text-accent-600" />
              <span class="font-semibold">Queer-Led</span>
            </div>
            <div class="flex items-center gap-3 badge badge-success glass-card">
              <LucideIcon name="accessibility" class="w-6 h-6 text-emerald-600" />
              <span class="font-semibold">Equity-Centered</span>
            </div>
          </div>
        </div>

        <!-- Visual Element -->
        <div class="animate-fade-in-up" style="animation-delay: 0.2s;">
          <div class="glass-ultra rounded-3xl p-12 text-center cosmic-float">
            <div class="space-y-8">
              <div class="text-6xl hologram-text" data-text="∞">∞</div>
              <h3 class="text-2xl font-bold text-neutral-900">Infinite Possibilities</h3>
              <p class="text-neutral-600 leading-relaxed">
                Every challenge is an opportunity to build something better. We help you see and create new possibilities.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA SECTION -->
  <section class="py-20 lg:py-32 relative overflow-hidden mesh-bg">
    <div class="max-w-5xl mx-auto px-6 text-center">
      <div class="animate-fade-in-up">
        <h2 class="text-4xl md:text-5xl font-bold mb-8 text-neutral-900">
          Ready to Transform Your Systems?
        </h2>
        
        <p class="text-xl md:text-2xl text-neutral-700 mb-12 leading-relaxed max-w-4xl mx-auto">
          Let's explore how we can help you build systems that actually work for everyone.
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-fade-in-up" style="animation-delay: 0.2s;">
        <a
          href="https://queerlyqualified.formaloo.me/ejys27"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-accent group hover-glow animate-shine"
        >
          <LucideIcon name="message" class="w-5 h-5 mr-3 group-hover:animate-subtle-pulse" />
          Start the Conversation
          <LucideIcon name="arrow-right" class="w-4 h-4 ml-3 group-hover:translate-x-1 transition-transform" />
        </a>

        <a
          href="/services"
          class="btn-secondary group"
        >
          <LucideIcon name="eye" class="w-5 h-5 mr-3 group-hover:scale-110 transition-transform" />
          View Our Services
        </a>
      </div>
    </div>
  </section>
</BaseLayout>