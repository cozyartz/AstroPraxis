---
import BaseLayout from '../layouts/BaseLayout.astro';
import LucideIcon from '../components/LucideIcon.astro';

const team = [
  {
    name: "Andrea Cozart Lundin",
    role: "Creative Director & Spatial Strategist",
    bio: "FAA-certified drone pilot, multimedia strategist, and narrative systems thinker. Andrea leads creative direction across visual storytelling, site-based media, and spatial impact design.",
    website: "https://andreacozart.me",
    image: "/images/andrea.webp",
    skills: ["Drone Operations", "Spatial Analysis", "Multimedia Strategy", "Narrative Systems", "Creative Direction"]
  },
  {
    name: "Amy Cozart Lundin", 
    role: "Learning Architect & Accessibility Designer",
    bio: "Instructional designer and accessibility nerd. Amy builds inclusive learning systems and leads strategic training for organizations rethinking how people grow.",
    website: "https://amylundin.me",
    image: "/images/amy.webp", 
    skills: ["Instructional Design", "Accessibility", "Inclusive Learning", "Strategic Training", "Organizational Development"]
  },
  {
    name: "Kyla Kremhelmer",
    role: "Rehabilitation & Disability Consultant",
    bio: "Kyla works at the intersection of rehabilitation, trauma-informed practice, and accessibility, helping clients navigate complex systems with clarity and support.",
    website: "#",
    image: "/images/kyla.webp",
    skills: ["Rehabilitation", "Trauma-Informed Practice", "Disability Advocacy", "Complex Systems Navigation"]
  },
  {
    name: "Nicole Hoffman",
    role: "International Education Advisor",
    bio: "Nicole brings global education systems expertise, admissions design, and intercultural knowledge to international student engagement and institutional strategy.",
    website: "#",
    image: "/images/nicole.webp",
    skills: ["International Education", "Admissions Design", "Intercultural Competency", "Institutional Strategy"]
  },
  {
    name: "Rebecca Judkins",
    role: "Instructional Designer & Technical Writer",
    bio: "Rebecca turns complex information into accessible, inclusive, and well-structured content. Her work bridges technical clarity and human connection.",
    website: "#",
    image: "/images/rebecca.webp",
    skills: ["Technical Writing", "Instructional Design", "Content Accessibility", "Complex Information Design"]
  }
];
---

<BaseLayout 
  title="About AstroPraxis - Our Team & Mission"
  description="Meet the women-owned, queer-led team behind AstroPraxis Consulting. Learn about our mission to transform systems and build equitable possibilities."
  keywords="about AstroPraxis, team, Andrea Cozart, Amy Lundin, women-owned consulting, queer-led business, equity consulting team, systems transformation experts"
>
  <!-- HERO SECTION -->
  <section class="relative bg-gray-50 py-20 lg:py-32">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <div>
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight mb-8 text-gray-900">
          Building Systems That Work
        </h1>
        
        <p class="text-xl md:text-2xl text-neutral-700 mb-6 max-w-4xl mx-auto leading-relaxed">
          We are a collective of consultants, designers, technologists, and facilitators committed to transforming structures and building equitable possibilities.
        </p>
      </div>
    </div>
  </section>

  <!-- TEAM SECTION -->
  <section class="py-20 lg:py-32 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-neutral-900">
          Meet Our Team
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto leading-relaxed">
          Experienced leaders bringing deep expertise in systems transformation, equity consulting, and inclusive design.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {team.map((member, index) => (
          <div class="bg-white rounded-xl p-8 shadow-md hover:shadow-lg transition-all duration-200 border border-gray-200">
            <div class="flex flex-col items-center text-center space-y-6">
              <!-- Profile Image -->
              <div class="relative">
                <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-blue-200 shadow-lg">
                  <img src={member.image} alt={member.name} class="w-full h-full object-cover" />
                </div>
                {member.website !== "#" && (
                  <div class="absolute -bottom-2 -right-2 w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center shadow-md">
                    <LucideIcon name="external-link" class="w-4 h-4 text-white" />
                  </div>
                )}
              </div>

              <!-- Content -->
              <div class="space-y-4">
                <div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-2">{member.name}</h3>
                  <p class="text-lg font-semibold text-blue-600 mb-3">{member.role}</p>
                  <p class="text-gray-600 leading-relaxed">{member.bio}</p>
                </div>

                <!-- Skills -->
                <div class="flex flex-wrap gap-2 justify-center">
                  {member.skills.map((skill) => (
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200">{skill}</span>
                  ))}
                </div>

                <!-- Website Link -->
                {member.website !== "#" && (
                  <a 
                    href={member.website} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors duration-200"
                  >
                    <span>Visit Website</span>
                    <LucideIcon name="arrow-right" class="w-4 h-4" />
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- MISSION SECTION -->
  <section class="py-20 lg:py-32 bg-blue-50">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Content -->
        <div>
          <h2 class="text-4xl md:text-5xl font-bold mb-8 text-gray-900">
            Our Mission
          </h2>
          
          <div class="space-y-6 text-lg text-gray-700 leading-relaxed">
            <p>
              We believe that every system can be transformed to work better for the people within it. Our approach centers equity, accessibility, and human dignity in everything we do.
            </p>
            
            <p>
              As a women-owned, queer-led consultancy, we bring lived experience and deep expertise to help organizations build more inclusive, effective, and sustainable systems.
            </p>
            
            <p>
              We work with clients who are ready to move beyond performative change toward structural transformation that creates lasting impact.
            </p>
          </div>

          <div class="mt-10 flex flex-wrap gap-4">
            <div class="flex items-center gap-3 px-4 py-2 bg-blue-100 text-blue-800 rounded-full border border-blue-200">
              <LucideIcon name="users" class="w-5 h-5 text-blue-600" />
              <span class="font-semibold text-sm">Women-Owned</span>
            </div>
            <div class="flex items-center gap-3 px-4 py-2 bg-purple-100 text-purple-800 rounded-full border border-purple-200">
              <LucideIcon name="heart" class="w-5 h-5 text-purple-600" />
              <span class="font-semibold text-sm">Queer-Led</span>
            </div>
            <div class="flex items-center gap-3 px-4 py-2 bg-emerald-100 text-emerald-800 rounded-full border border-emerald-200">
              <LucideIcon name="accessibility" class="w-5 h-5 text-emerald-600" />
              <span class="font-semibold text-sm">Equity-Centered</span>
            </div>
          </div>
        </div>

        <!-- Visual Element -->
        <div>
          <div class="bg-white rounded-xl p-12 text-center shadow-md border border-gray-200">
            <div class="space-y-8">
              <div class="text-6xl text-blue-600 font-bold">âˆž</div>
              <h3 class="text-2xl font-bold text-gray-900">Infinite Possibilities</h3>
              <p class="text-gray-600 leading-relaxed">
                Every challenge is an opportunity to build something better. We help you see and create new possibilities.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA SECTION -->
  <section class="py-20 lg:py-32 bg-gray-50">
    <div class="max-w-5xl mx-auto px-6 text-center">
      <div>
        <h2 class="text-4xl md:text-5xl font-bold mb-8 text-gray-900">
          Ready to Transform Your Systems?
        </h2>
        
        <p class="text-xl md:text-2xl text-gray-700 mb-12 leading-relaxed max-w-4xl mx-auto">
          Let's explore how we can help you build systems that actually work for everyone.
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <a
          href="https://queerlyqualified.formaloo.me/ejys27"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-8 py-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors duration-200 shadow-md hover:shadow-lg"
        >
          <LucideIcon name="message" class="w-5 h-5 mr-3" />
          Start the Conversation
          <LucideIcon name="arrow-right" class="w-4 h-4 ml-3" />
        </a>

        <a
          href="/services"
          class="inline-flex items-center px-8 py-4 bg-white text-blue-600 font-semibold rounded-lg border border-blue-600 hover:bg-blue-50 transition-colors duration-200"
        >
          <LucideIcon name="eye" class="w-5 h-5 mr-3" />
          View Our Services
        </a>
      </div>
    </div>
  </section>
</BaseLayout>