        {team.map(person => (
          <div class="border border-gray-200 p-4 rounded-lg shadow hover:shadow-md transition">
            <a href={person.url} target="_blank" rel="noopener noreferrer" class="text-xl font-semibold text-indigo-700 hover:underline">
              {person.name}
            </a>
          </div>
        ))}
      </div>
    </main>

    <footer class="p-6 text-center text-sm text-gray-500 mt-10">
